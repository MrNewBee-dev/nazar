@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Nazar1988.Models.ViewModels.EditProfileViewModel
@{
    ViewData["Title"] = "EditProfile";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">خونه</a></li>
            <li class="breadcrumb-item active" aria-current="page"> ویرایش پروفایل </li>
        </ul>
    </nav>
</div>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header><h1> ویرایش حساب کاربری </h1></header>
                        <div class="inner form-layer">
                            <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
                                @if (ViewBag.IsSuccess != null)
                                {
                                    <div class="alert alert-success">
                                        اطلاعات کاربری شما با موفقیت ویرایش شد
                                    </div>
                                }


                            <div class="row">
                                <div class="col-md-7 col-sm-8 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon" id="firstname"><i class="zmdi zmdi-account"></i></span>
                                        <input type="text" class="form-control" asp-for="FirstName" placeholder="نام" aria-describedby="username">
                                    </div>
                                </div>
                                <div class="col-md-7 col-sm-8 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon" id="lastname"><i class="zmdi zmdi-account"></i></span>
                                        <input type="text" class="form-control" asp-for="LastName" placeholder="نام خانوادگی" aria-describedby="username">
                                    </div>
                                </div>
                                <div class="col-md-7 col-sm-8 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                                        <input type="text" class="form-control" asp-for="Email" placeholder="ایمیل" aria-describedby="email-address">
                                    </div>
                                </div>
                                <div class="col-md-7 col-sm-8 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon" id="phonenumber"><i class="zmdi zmdi-email"></i></span>
                                        <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="شماره تلفن" aria-describedby="email-address">
                                    </div>
                                </div>


                                <div class="col-md-7 col-sm-8 col-xs-12">
                                    <button class="btn btn-success"> ویرایش اطلاعات </button>
                                </div>
                            </div>

                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>


