@model Nazar1988.Models.ViewModels.WalletViewModelAdmin
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "AddWalletCart";
    Layout = "~/Views/Shared/_MymasterLayout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddWalletCart" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" asp-items="@ViewBag.TypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group " hidden>
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" value="@ViewBag.Id" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckId" class="control-label"></label>
                <input asp-for="CheckId" class="form-control" />
                <span asp-validation-for="CheckId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PardakhtOni" class="control-label" ></label>
                <input asp-for="PardakhtOni" class="form-control" type="checkbox" />
                
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره اطلاعات" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">بازگشت به صفحه قبل</a>
</div>



