@model ReflectionIT.Mvc.Paging.PagingList<Nazar1988.Models.ViewModels.BedehiViewModel>
@using ReflectionIT.Mvc.Paging
@addTagHelper*,ReflectionIT.Mvc.Paging
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_MymasterLayout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-light">
                کاربران سایت
            </div>
            <div class="card-body">
                
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>

                                <th class="text-center">


                                    ایمیل
                                </th>
                                <th class="text-center">
                                    بدهی
                                </th>
                                <th class="text-center">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)

                            {
                                <tr>

                                    <td class="text-center">
                                        @*@Html.DisplayFor(modelItem => item.FirstName +""+item.LastName )*@
                                        @item.Email


                                    </td>
                                    <td class="text-center  text-danger">
                                        @item.Amount
                                    </td>
                                    
                                    <td class="text-center">
                                    
                                            <a asp-action="Tasvie" asp-route-id="@item.UserId" class="btn btn-info btn-icon">
                                                <i class="fa fa-check text-white"></i>
                                            </a>
                                            <a asp-action="JoziyateBedihi" asp-route-id="@item.UserId" class="btn btn-danger btn-icon">
                                                <i class="fa fa-book text-white"></i>
                                            </a>
                                    
                                    

                                    

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <nav>
                        @await this.Component.InvokeAsync("Pager", new { PagingList = this.Model })
                    </nav>

                </div>


            </div>
        </div>
    </div>
</div>
